<h1>new post</h1>

<%= form_for(@post) do |f| %>
	<ul>
		<% @post.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
		
	</ul>
	<p>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :content %>
		<%= f.text_area :content %>
	</p>
	<p>
		<%= f.submit %>
	</p>

	
<% end %>